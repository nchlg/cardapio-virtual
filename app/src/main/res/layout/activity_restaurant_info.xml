<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/text_margin"
    tools:context="facin.com.cardapio_virtual.RestaurantInfoActivity"
     tools:layout_editor_absoluteY="25dp"
     tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/descricao_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:textAppearance="@style/TextAppearance.Medium"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/endereco_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:textIsSelectable="true"
        android:textAppearance="@style/TextAppearance.Medium"
        android:layout_below="@+id/descricao_text" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:textAppearance="@style/TextAppearance.Medium"
        android:textIsSelectable="true"
        android:layout_below="@+id/endereco_text" />

    <TextView
        android:id="@+id/telefone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:textIsSelectable="true"
        android:textAppearance="@style/TextAppearance.Medium"
        android:layout_below="@+id/email_text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        style="?android:attr/buttonBarStyle"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:orientation="vertical"
        android:layout_below="@id/telefone_text">

        <Button
            android:id="@+id/btn_cardapio"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent" />
        <Button
            android:id="@+id/btn_favoritar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</RelativeLayout>

